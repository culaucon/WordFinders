<!-- views/partials/navbar.ejs -->

<nav class="navbar navbar-default navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">Word Finders</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
			<% if (user) { %>
				<% if (locals.page === "home") { %>
					<li class="active">
				<% } else { %>
					<li>
				<% } %>
					<a href="/">Home</a></li>

				<% if (locals.page === "practice") { %>
					<li class="dropdown active">
				<% } else { %>
					<li class="dropdown">
				<% } %>
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Practice Mode <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li><a href="/practice?mode=0">Easy</a></li>
							<li><a href="/practice?mode=1">Medium</a></li>
							<li><a href="/practice?mode=2">Hard</a></li>
						</ul>
					</li>
				
				<% if (locals.page === "challenge") { %>
					<li class="active">
				<% } else { %>
					<li>
				<% } %>
						<a href="/challenge">Challenge Mode</a>
					</li>


			<% } %>
			</ul>

			<ul class="nav navbar-nav navbar-right">
			<% if (!locals.user) {
				if (!locals.login) { %>
					<form class="navbar-form navbar-right" action="/login" method="post">
						<label>Username: </label>
						<input type="text" name="username">
						<label>Password: </label>
						<input type="password" name="password">
						<label>Remember Me</label>
						<input type="checkbox" name="remember" value="yes">
						<button type="submit" class="btn btn-primary">Login</button>
					</form>
				<% } %>
			<% } else { %>
				<li><p class="navbar-text">Hi <span class="<%= user.title %>"><%= user.username %></span></p></li>
				<li>
					<form action="/logout" method="get">
						<button class="btn btn-default navbar-btn">Log Out</button>
					</form>
				</li>
			<% } %>
			</ul>
		</div>
	</div>
</nav>
